          />
          <!-- Process Step 3 -->
          <ProcessStepItem
            title="Strategic Transformation"
            description="Converting exploitative dynamics into controlled, predictable systems you direct."
            isLast={true}
            data-aos="fade-up" data-aos-delay="300"
            iconSvg={`<svg viewBox="0 0 280 280" xmlns="http://www.w3.org/2000/svg">
        <path id="mainCircle" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" d="M 232 121.5 C 232 69.861374 190.138626 28 138.5 28 C 86.861374 28 45 69.861374 45 121.5 C 45 173.138626 86.861374 215 138.5 215 C 190.138626 215 232 173.138626 232 121.5 Z"/>
