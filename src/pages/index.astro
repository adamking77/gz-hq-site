  </Wrapper>
  <Wrapper variant="standard" class="py-24 mb-24">
    <InfoSection sectionTitle="About" sectionContent={introContent} data-aos="fade-up" data-aos-offset="200" />
  </Wrapper>
  <HomepageResources />
