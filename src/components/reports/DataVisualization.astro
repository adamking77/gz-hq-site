---
// Note: This component originally used 'recharts' for a PieChart and 'useScrollTrigger'.
// For this structural conversion, the chart is represented by a placeholder.
// Full implementation will require a client-side charting solution compatible with Astro.

const distributionData = [
  { name: 'Strategy', value: 35, color: 'hsl(var(--foreground))' },
  { name: 'Operations', value: 28, color: 'hsl(var(--foreground))' },
  { name: 'Technology', value: 22, color: 'hsl(var(--foreground))' },
  { name: 'Finance', value: 15, color: 'hsl(var(--foreground))' },
];

const isVisible = true; // Simulate visibility
---
<section class="py-32 lg:py-40 bg-background">
  <div class="max-w-6xl mx-auto px-20 lg:px-24">
    <div class="grid lg:grid-cols-12 gap-16 items-center">
      <div class="lg:col-span-6">
        <div class="h-96 w-full relative group cursor-pointer">
          <div class="w-full h-full flex items-center justify-center px-8 border border-dashed border-foreground/20 rounded-lg">
            <p class="text-foreground/50 text-center">
              [Placeholder for Pie Chart]<br/>
              (Originally implemented with Recharts)
            </p>
          </div>
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-center">
              <div class="text-xl font-light text-foreground">100%</div>
              <div class="text-xs font-light text-foreground/50 tracking-wider">PORTFOLIO</div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="lg:col-span-6">
        <div class="space-y-12">
          <div class="space-y-8">
            <h2 class="text-4xl md:text-5xl font-light leading-tight tracking-tight text-foreground">
              Service Distribution
            </h2>
            <div class="w-12 h-px bg-foreground/20"></div>
            <p class="text-base font-light text-foreground/70 leading-relaxed max-w-lg">
              Our comprehensive service portfolio addresses critical business functions 
              with strategic focus on high-impact areas.
            </p>
          </div>
          
          <div class="grid grid-cols-2 gap-8">
            {distributionData.map((item, index) => (
              <div class="space-y-3 group cursor-pointer" style={{ animationDelay: isVisible ? `${index * 150}ms` : '0ms' }}>
                <div class="flex items-center space-x-3">
                  <div 
                    class="w-3 h-3 rounded-full"
                    style={{ 
                      backgroundColor: item.color, 
                      opacity: 1 - (index * 0.15),
                      // boxShadow: `0 0 20px ${item.color}` // Removed for simplicity, consider CSS
                    }}
                  />
                  <div class="text-sm font-light text-foreground">
                    {item.name}
                  </div>
                </div>
                <div class="text-2xl font-light text-foreground ml-6">
                  {item.value}%
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>