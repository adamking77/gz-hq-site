---
const { title, url, description, pubDate, author } = Astro.props;
import Text from "@/components/fundations/elements/Text.astro";
---

<a
  href={url}
  title={title}
  class="group block border border-black/10 dark:border-white/10 rounded-lg p-6 shadow-md transition-all duration-300 ease-in-out hover:scale-105 hover:shadow-xl"
>
  <div class="flex flex-col">
    <Text
      tag="span"
      variant="textXS"
      class="font-medium text-zinc-500 dark:text-zinc-400 uppercase"
    >
      {author} -
      <time datetime={pubDate}>{pubDate}</time>
    </Text>
    <Text
      tag="h4"
      variant="textBase"
      class="text-[#222222] dark:text-white mt-1 font-medium group-hover:text-black/70 dark:group-hover:text-white/70"
    >
      {title}
    </Text>
    <Text
      tag="p"
      variant="textSM"
      class="text-zinc-500 dark:text-zinc-400 mt-4"
    >
      {description}
    </Text>
  </div>
</a>
